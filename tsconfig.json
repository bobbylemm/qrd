{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2017",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "rootDir": "./src",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*"]
  }
  